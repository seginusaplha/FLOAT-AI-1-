modules = ["nodejs-20", "python-3.12"]
[agent]
expertMode = true

[nix]
channel = "stable-25_05"

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "FloatChat Backend"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "FloatChat Frontend"

[[workflows.workflow]]
name = "FloatChat Backend"
author = "agent"

[[workflows.workflow.tasks]]
